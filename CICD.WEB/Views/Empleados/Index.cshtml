
<h3 class="mt-4">Empleados</h3>
<div class="row">
    <div class="p-2 text-end">
        
       
    </div>
    <div class="col-sm-6">
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="txbNombreEmpleado" placeholder="Nombre empleado" aria-describedby="btnBuscar">
            <a class="btn btn-primary" id="btnBuscar"><i class="fa fa-search"></i> Buscar</a>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="p-2 text-end">
            <a class="btn btn-primary" asp-controller="Empleados" asp-action="Nuevo"><i class="fa-solid fa-plus"></i> Nuevo empleado</a>
        </div>
    </div>
</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Empleados encontrados
    </div>
    <div class="card-body">
        <div id="divResultado"></div>
    </div>
</div>
<script type="text/x-jsrender" id="tmpResultado">
    {{if Empleados.length>0}}
    <div class="table-concept">
        <table id="tlbEmpleados" style="width:100%" >
             <thead>
                    <tr>
                        <th style="width: 110px !important"></th>
                        <th>Nombre completo</th>
                        <th class="text-center">Fecha nacimiento</th>
                        <th>Sexo</th>
                        <th>Cargo</th>
                        <th class="text-end">Haber básico</th>
                    </tr>
                </thead>
            <tbody>
                {{for Empleados}}
                    <tr id="{{>Id}}">
                        <td style="width: 110px !important" class="demo">
                            <a class="btn btn-primary" href="Empleados/Editar/{{>Id}}"><i class="fa fa-pencil"></i></a>
                            <a class="btn btn-danger eliminar"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                        <td class="nombreEmpleado">{{>NombreCompleto}}</td>
                        <td class="text-center">{{>FechaNacimiento}}</td>
                        <td>{{>Sexo}}</td>
                        <td>{{>Cargo}}</td>
                        <td class="text-end">{{>HaberBasico}}</td>
                    </tr>
                {{/for}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="alert alert-warning" role="alert">No se encontraron empleados registrados.</div>
    {{/if}}
</script>

@section Scripts
{
    <script src="@Url.Content("~/scripts/js/empleados.js")"></script>
}
