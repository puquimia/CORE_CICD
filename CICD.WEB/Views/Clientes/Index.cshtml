
<h3 class="mt-4">Clientes</h3>
<div class="row">
    <div class="p-2 text-end">
    </div>
    <div class="col-sm-6">
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="txbNombreCliente" placeholder="Busque por nombre de cliente" aria-describedby="btnBuscar">
            <a class="btn btn-primary" id="btnBuscar"><i class="fa fa-search"></i> Buscar</a>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="p-2 text-end">
            <a class="btn btn-primary" id="btnNuevocliente"><i class="fa-solid fa-plus"></i> Nuevo cliente</a>
        </div>
    </div>
</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Clientes encontrados
    </div>
    <div class="card-body">
        <div id="divResultado"></div>
    </div>
</div>
<script type="text/x-jsrender" id="tmpResultado">
    {{if Clientes.length>0}}
    <div class="table-concept">
        <table id="tlbEmpleados" style="width:100%" >
             <thead>
                    <tr>
                        <th style="width: 110px !important"></th>
                        <th>Tipo</th>
                        <th>Nombre</th>
                        <th>Documento</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                        <th>Contacto</th>
                        <th class="text-center">Estado</th>
                    </tr>
                </thead>
            <tbody>
                {{for Clientes}}
                    <tr id="{{>Id}}">
                        <td style="width: 110px !important">
                            <a class="btn btn-primary" title="Editar"><i class="fa fa-pencil"></i></a>
                            <a class="btn btn-danger eliminar" title="Eliminar"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                        <td>{{>TipoCliente}}</td>
                        <td class="nombre">{{>Nombre}}</td>
                        <td>{{>Documento}}</td>
                        <td>{{>Telefono}}</td>
                        <td>{{>Correo}}</td>
                        <td>{{>NombreContacto}}</td>
                        <td class="text-center">{{>DescripcionEstado}}</td>
                    </tr>
                {{/for}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="alert alert-warning" role="alert">No se encontraron clientes registrados.</div>
    {{/if}}
</script>


<!-- Modal -->
<div class="modal fade" id="divCliente" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Nuevo cliente</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <label class="form-label">Tipo cliente <span class="Obligatorio">*</span></label>
                        <select class="form-select" id="ddlTipo" asp-items="(List<SelectListItem>)@ViewData["TipoCliente"]">
                            <option value="">&lt;SELECCIONE&gt;</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-12">
                        <label class="form-label">Nombre <span class="Obligatorio">*</span></label>
                        <input type="text" class="form-control" id="txbNombre" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">NIT / CI <span class="Obligatorio">*</span></label>
                        <input type="text" class="form-control" id="txbDocumento" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="txbTelefono" autocomplete="off">
                    </div>
                    <div class="col-sm-12">
                        <label class="form-label">Correo</label>
                        <input type="text" class="form-control" id="txbCorreo" autocomplete="off">
                    </div>
                    <div class="col-sm-12">
                        <label class="form-label">Dirección</label>
                        <textarea id="txbDireccion" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Nombre contacto</label>
                        <input type="text" class="form-control contacto" id="txbNombreContacto" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Teléfono contacto</label>
                        <input type="text" class="form-control contacto" id="txbTelefonoContacto" autocomplete="off">
                    </div>
                    <div class="col-sm-12">
                        <label class="form-label">Correo contacto</label>
                        <input type="text" class="form-control contacto" id="txbCorreoContacto" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Estado <span class="Obligatorio">*</span></label>
                        <select class="form-select" id="ddlEstado" asp-items="(List<SelectListItem>)@ViewData["Estado"]">
                            <option value="">&lt;SELECCIONE&gt;</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/scripts/js/clientes.js")"></script>
}
